.weui-siges {
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
  overflow: hidden;
}

.weui-sige {
  position: relative;
  float: left;
  padding: 15rpx 10rpx;
  width: 25%;
  height: 350rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.weui-sige_active {
  /* background-color: #ececec;  */
  -o-transform-origin: 50% 50%;
  -webkit-transform: scale(0.95, 0.95);
  -webkit-box-shadow: 2px 2px 5px #888;
  box-shadow: 2px 2px 5px #888;
}

.weui-sige__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-sige__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.sige-photo {
  height: 182rpx;
  width: 100%;
  display:  inline-block;
  overflow:  hidden;
  margin: 10rpx 0rpx;
}

.sige-name {
  font-size: 14pt;
}

.sige-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.sige-price {
  /* 下面这个 当大数字时会出框  *//* padding-left: 20rpx; *//* width: 74%; */
