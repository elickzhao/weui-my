.weui-tabbars {
  overflow: hidden;
  position: absolute;
  width: 100%;
  bottom: 20px;
}

.weui-tabbar {
  position: relative;
  float: left;
  /* padding: 20px 10px; */
  width: 25%;
  box-sizing: border-box;
}

.weui-tabbar_active {
  background-color: #ececec; 
  color: #FF8140;
}

.weui-tabbar__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-tabbar__label {
  display: block;
  text-align: center;
  margin-top: 5rpx; 
  color: #858585;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
